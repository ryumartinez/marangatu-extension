{
  "manifest_version": 3,
  "name": "Marangatu Sidebar Enhancer",
  "version": "1.0",
  "description": "Injects a custom sidebar for improved navigation",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://marangatu.set.gov.py/*"],
  "action": {
    "default_title": "Inject Sidebar",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
