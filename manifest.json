{
  "manifest_version": 3,
  "name": "Marangatu Sidebar Enhancer",
  "version": "1.0",
  "description": "Injects a custom sidebar for improved navigation",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://marangatu.set.gov.py/*"],
  "content_scripts": [
    {
      "matches": ["https://marangatu.set.gov.py/*"],
      "js": ["inject.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/sidebar.css",
        "injected-logic.js"
      ],
      "matches": ["https://marangatu.set.gov.py/*"]
    }
  ],
  "icons": {
    "16": "./assets/icon-16.png",
    "48": "./assets/icon-48.png",
    "128": "./assets/icon-128.png"
  }
}
